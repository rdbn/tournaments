{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}
            <div class="input-group">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Добавить турнир'}}) }}
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default">Добавить</button>
                </span>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-lg-12">
            <h3>Список команд</h3>
            <ul class="list-group">
                {% for team in teams %}
                    <li class="list-group-item">
                        {{ team.name }}
                        <a class="" href="{{ path('teams_delete', {id: team.id}) }}">
                            Удалить
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}