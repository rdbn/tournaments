{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h3>Турнир: {{ tournament.name }}</h3>
            <table class="table">
                {% for key, matchesInDay in teamGenerator %}
                    <p>{{ key }}</p>
                    {% for matchInDay in matchesInDay %}
                        <p>{{ matchInDay[0].name }} | {{ matchInDay[1].name }}</p>
                    {% endfor %}
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}