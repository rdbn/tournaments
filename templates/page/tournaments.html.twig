{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}
                {{ form_errors(form.name) }}
                <div class="input-group">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Добавить турнир'}}) }}
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">Добавить</button>
                    </span>
                </div>
                {% for matchTeams in form.matchTeams.children %}
                    <div class="checkbox-inline">
                        <label for="{{ matchTeams.vars.id }}">
                            {{ form_widget(matchTeams) }}
                            {{ matchTeams.vars.label }}
                        </label>
                    </div>
                {% endfor %}
            {{ form_end(form) }}
        </div>
        <div class="col-lg-12">
            <h3>Список турниров</h3>
            <ul class="list-group">
            {% for tournament in tournaments %}
                <li class="list-group-item">
                    <a class="" href="{{ path('tournaments_slug', {slug: tournament.slug}) }}">
                        {{ tournament.name }}
                    </a>
                    <a class="" href="{{ path('tournaments_delete', {slug: tournament.slug}) }}">
                        Удалить
                    </a>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}